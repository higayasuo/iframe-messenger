{
  "name": "@higayasuo/iframe-messenger",
  "version": "0.1.1",
  "description": "A library for iframe communication",
  "type": "module",
  "main": "./dist/iframe-messenger.umd.cjs",
  "module": "./dist/iframe-messenger.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/iframe-messenger.js",
      "require": "./dist/iframe-messenger.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "iframe",
    "messaging",
    "communication",
    "postMessage"
  ],
  "author": "higayasuo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/higayasuo/iframe-messenger.git"
  },
  "bugs": {
    "url": "https://github.com/higayasuo/iframe-messenger/issues"
  },
  "homepage": "https://github.com/higayasuo/iframe-messenger#readme",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jsdom": "^26.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^1.3.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
